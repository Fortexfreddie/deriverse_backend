  "components": {
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": false },
          "error": { "type": "string" }
        }
      },
      "Fill": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "signature": { "type": "string" },
          "positionId": { "type": "string" },
          "position": { "type": "object" },
          "market": { "type": "string" },
          "side": { "type": "string", "enum": ["LONG", "SHORT"] },
          "price": { "type": "number" },
          "size": { "type": "number" },
