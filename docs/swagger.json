        "parameters": [
          { "name": "wallet", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": {
            "description": "Dashboard data fetched successfully",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
